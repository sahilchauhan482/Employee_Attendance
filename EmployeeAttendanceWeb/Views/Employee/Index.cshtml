    <table id="tblData" class="table table-bordered table-active table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Gender </th>
                <th>Phone ☎️</th>
                <th>Email 📩</th>
                <th>Salary ₹</th>
                <th>DOB </th>
                <th>PAN </th>
                <th>Actions👇🏿</th>
            </tr>
        </thead>
        <tbody id="tblData_tbody">
        </tbody>
    </table>
</div>

